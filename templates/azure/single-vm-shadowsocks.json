{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "buildingBlocks": {
      "value": [
        {
          "type": "VirtualNetwork",
          "settings": [
            {
              "name": "ra-single-linux-vm-vnet",
              "addressPrefixes": [
                "10.0.0.0/16"
              ],
              "subnets": [
                {
                  "name": "web",
                  "addressPrefix": "10.0.1.0/24"
                }
              ]
            }
          ]
        },
        {
          "type": "NetworkSecurityGroup",
          "settings": [
            {
              "name": "ra-single-linux-vm-nsg",
              "securityRules": [
                {
                  "name": "SSH"
                },
                {
                  "name": "allow-proxy",
                  "protocol": "udp",
                  "sourcePortRange": "*",
                  "destinationPortRange": "8388",
                  "sourceAddressPrefix": "*",
                  "destinationAddressPrefix": "*",
                  "access": "Allow",
                  "priority": 110,
                  "direction": "Inbound"
              }
              ],
              "virtualNetworks": [
                {
                  "name": "ra-single-linux-vm-vnet",
                  "subnets": [
                    "web"
                  ]
                }
              ]
            }
          ]
        },
        {
          "type": "VirtualMachine",
          "settings": {
            "vmCount": 1,
            "namePrefix": "ra-single-linux",
            "computerNamePrefix": "web",
            "size": "Basic_A0",
            "adminUsername": "linux-admin",
            "adminPassword": "Mont2018Test123",
            "virtualNetwork": {
              "name": "ra-single-linux-vm-vnet"
            },
            "nics": [
              {
                "isPublic": true,
                "subnetName": "web"
              }
            ],
            "osType": "linux",
            "dataDisks": {
              "count": 2
            }
          }
        },
        {
          "type": "VirtualMachineExtension",
          "settings": [
            {
              "vms": [
                "ra-single-linux-vm1"
              ],
              "extensions": [
                {
                  "name": "ra-single-linux-vm1-ext",
                  "publisher": "Microsoft.Azure.Extensions",
                  "type": "CustomScript",
                  "typeHandlerVersion": "2.0",
                  "autoUpgradeMinorVersion": true,
                  "settings": {
                    "fileUris": [
                      "https://raw.githubusercontent.com/w0nders/solutions/master/scripts/create_shadowsocks_cfg.sh"
                    ]
                  },
                  "protectedSettings": {
                    "commandToExecute": "sh create_shadowsocks_cfg.sh"

                  }
                }
              ]
            }
          ]
        }
      ]
    }
  }
}